<html>

    <head>
        <title><%= fruit.type %> - <%= fruit.kind %></title>
        <meta charset="UTF-8">
    </head>

    <!-- CSS Styling -->
    <style>
        .app {
            border: 1px solid black; 
            padding: 5;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }
        .footer {
            bottom: 0;
            position: absolute;
        }
    </style>

    <body>
        <!-- Display Fruit Info -->
        <div class="app">
            <p>Fruit Creation Date &emsp;:&emsp;<%= fruit.creationDate %></p>
            <p>Fruit Type &emsp;:&emsp;<%= fruit.type %></p>
            <p>Fruit Kind &emsp;:&emsp;<%= fruit.kind %></p>
            <p>Fruit Origin &emsp;:&emsp;<%= fruit.origin %></p>
            <form action="<%= back_url%>" method="get">
                <button type="submit">Go Back</button>
            </form>
        </div>

        <!-- Including footer -->
        <%- include('./footer.ejs'); %>
    </body>
</html>